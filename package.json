{
	"name": "ultimate-blocks",
	"version": "3.1.4-dev",
	"private": true,
	"scripts": {
		"start": "concurrently -k -c 'blue,yellow,green' -n 'gutenberg,recompile,bundle' \"wp-scripts start\" \"node recompileOnChange.js\" \"npm run bundle_additional_watch\"",
		"test": "mocha __tests__/js/unit/**/*.js",
		"test:watch": "npm run test -- --watch",
		"test:coverage": "nyc npm run test",
		"bundle_additional_watch": "parcel watch ./admin/js/src/*.js --dist-dir ./bundle-dist --no-hmr",
		"bundle_additional_build": "parcel build ./admin/js/src/*.js --dist-dir ./bundle-dist --no-cache --no-source-maps",
		"build": "wp-scripts build && node recompile.js && npm run bundle_additional_build && npm run compress-plugin-prod",
		"compress-plugin-dev": "cross-env NODE_ENV=development node ./pluginCompress.js ultimate-blocks.zip",
		"compress-plugin-prod": "cross-env NODE_ENV=production node ./pluginCompress.js ultimate-blocks.zip",
		"lint:settings-menu": "eslint ./admin/js/src/ --fix",
		"lint:tests": "eslint ./__tests__/js --fix",
		"lint:styles": "stylelint \"./admin/css/src/**/*.scss\" --fix",
		"lint": "concurrently \"npm run lint:settings-menu\" \"npm run lint:tests\" \"npm run lint:styles\""
	},
	"alias": {
		"$Containers": "./admin/js/src/containers",
		"$Components": "./admin/js/src/components",
		"$Data": "./admin/js/src/data",
		"$AdminInc": "./admin/js/src/inc",
		"$HOC": "./admin/js/src/hoc",
		"$Stores": "./admin/js/src/stores",
		"$Styles": "./admin/css/src/",
		"$Library": "./library",
		"$EditorComponents": "./src/inc/components"
	},
	"lint-staged": {
		"./admin/js/src/**/*.js": "eslint --fix",
		"./__tests__/js/**/*.js": "eslint --fix",
		"./admin/css/src/**/*.scss": "stylelint --fix"
	},
	"dependencies": {
		"@babel/core": "^7.18.2",
		"@babel/plugin-proposal-class-properties": "^7.17.12",
		"@babel/preset-env": "^7.18.2",
		"@babel/preset-react": "^7.17.12",
		"@fortawesome/fontawesome-svg-core": "^6.3.0",
		"@fortawesome/free-brands-svg-icons": "^6.3.0",
		"@fortawesome/free-solid-svg-icons": "^6.3.0",
		"@fortawesome/react-fontawesome": "^0.2.0",
		"@reduxjs/toolkit": "^1.8.4",
		"@wordpress/api-fetch": "^6.27.0",
		"@wordpress/block-editor": "^11.2.0",
		"@wordpress/blocks": "^11.15.0",
		"@wordpress/browserslist-config": "^5.35.0",
		"@wordpress/components": "^23.2.0",
		"@wordpress/compose": "^6.5.0",
		"@wordpress/data": "^7.0.0",
		"@wordpress/hooks": "^3.16.0",
		"@wordpress/i18n": "^4.15.0",
		"ace-builds": "^1.32.3",
		"deepmerge": "^4.2.2",
		"moment": "^2.29.4",
		"react": "^18.1.0",
		"react-ace": "^10.1.0",
		"react-dom": "^18.1.0",
		"react-redux": "^8.0.2",
		"react-sortable-hoc": "^2.0.0",
		"react-transition-group": "^4.4.5",
		"swiper": "^6.8.4",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.18.9",
		"@babel/preset-react": "^7.18.6",
		"@babel/register": "^7.22.15",
		"@parcel/transformer-sass": "^2.7.0",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.5.1",
		"@wordpress/eslint-plugin": "^17.2.0",
		"@wordpress/scripts": "^23.2.0",
		"archiver": "^5.3.1",
		"babel-plugin-module-resolver": "^5.0.0",
		"chai": "^4.3.10",
		"concurrently": "^7.2.1",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.1",
		"dirty-chai": "^2.0.1",
		"eslint": "^8.56.0",
		"eslint-import-resolver-custom-alias": "^1.3.0",
		"eslint-import-resolver-webpack": "^0.13.2",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-testing-library": "^6.0.2",
		"fancy-terminal": "^1.0.1",
		"global-jsdom": "^9.1.0",
		"gulp": "^4.0.2",
		"gulp-notify": "^4.0.0",
		"gulp-sort": "^2.0.0",
		"gulp-wp-pot": "^2.5.0",
		"ignore-emit-webpack-plugin": "^2.0.6",
		"lint-staged": "^14.0.1",
		"mini-css-extract-plugin": "^2.6.0",
		"mocha": "^10.2.0",
		"nyc": "^15.1.0",
		"parcel": "^2.7.0",
		"path": "^0.12.7",
		"postcss-loader": "^7.0.0",
		"postcss-preset-env": "^7.7.0",
		"prettier": "^3.2.2",
		"proxyquire": "^2.1.3",
		"sass": "^1.52.1",
		"sass-loader": "^13.0.0",
		"sinon": "^16.1.0",
		"stylelint": "^15.10.3",
		"stylelint-config-standard-scss": "^11.0.0",
		"yorkie": "^2.0.0"
	}
}
