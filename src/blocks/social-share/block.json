{
     "$schema": "https://schemas.wp.org/trunk/block.json",
     "apiVersion": 3,
     "name": "ub/social-share",
     "title": "Social Share",
     "category": "ultimateblocks",
     "description": "Add social share buttons in your posts and pages with this block.",
     "keywords": [
          "social",
          "share",
          "Ultimate Blocks"
     ],
     "attributes": {
          "blockID": {
               "type": "string",
               "default": ""
          },
          "showFacebookIcon": {
               "type": "boolean",
               "default": true
          },
          "facebookCaption": {
               "type": "string",
               "default": "share"
          },
          "showTwitterIcon": {
               "type": "boolean",
               "default": true
          },
          "twitterCaption": {
               "type": "string",
               "default": "tweet"
          },
          "showLinkedInIcon": {
               "type": "boolean",
               "default": true
          },
          "linkedInCaption": {
               "type": "string",
               "default": "share"
          },
          "showPinterestIcon": {
               "type": "boolean",
               "default": true
          },
          "pinterestCaption": {
               "type": "string",
               "default": "pin"
          },
          "showRedditIcon": {
               "type": "boolean",
               "default": true
          },
          "redditCaption": {
               "type": "string",
               "default": "post"
          },
          "showTumblrIcon": {
               "type": "boolean",
               "default": true
          },
          "tumblrCaption": {
               "type": "string",
               "default": "share"
          },
          "iconSize": {
               "type": "string",
               "default": "normal"
          },
          "iconShape": {
               "type": "string",
               "default": "none"
          },
          "align": {
               "type": "string",
               "default": "left"
          },
          "iconOrder": {
               "type": "array",
               "default": [
                    "facebook",
                    "twitter",
                    "linkedin",
                    "pinterest",
                    "reddit",
                    "tumblr"
               ]
          },
          "useCaptions": {
               "type": "boolean",
               "default": true
          },
          "addOutline": {
               "type": "boolean",
               "default": true
          },
          "orientation": {
               "type": "string",
               "default": "row"
          },
          "buttonColor": {
               "type": "string",
               "default": ""
          },
          "padding": {
               "type": "object",
               "default": {}
          },
          "margin": {
               "type": "object",
               "default": {}
          }
     },
     "supports": {}
}